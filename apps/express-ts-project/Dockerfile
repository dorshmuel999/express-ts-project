# Run the container with `docker run -p 3000:3000 -t express-ts-project`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system express-ts-project && \
          adduser --system -G express-ts-project express-ts-project

COPY dist/apps/express-ts-project express-ts-project/
RUN chown -R express-ts-project:express-ts-project .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix express-ts-project --omit=dev -f install

CMD [ "node", "express-ts-project" ]
